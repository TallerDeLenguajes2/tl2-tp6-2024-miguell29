@using Models;
@model List<Producto>
@{
    ViewData["Title"] = "Lista de Productos";
}

<section>
    <h2 class="display-3">Lista de Productos  </h2>
    <a asp-action="AgregarProducto" asp-controller="Producto" class="btn btn-primary mt-3"><strong>Agregar Producto</strong></a>
    <ul class="list-group list-group-flush ">
        @if(Model != null && Model.Any())
        {
            @foreach(var producto in Model)
            {
                <li class=" list-group-item text-info">
                    
                        <span class="text-size-2">@producto.Descripcion</span>
                        <span class="badge bg-secondary m-0 p-2"><strong> @producto.Precio </strong></span>
                    
                    <section class="float-md-end">
                        <a asp-action="Editar" asp-controller="Producto" asp-route-id="@producto.Id" class="btn btn-sm btn-warning p-2"><strong>Editar</strong></a>
                        <a asp-action="Eliminar" asp-controller="Producto" asp-route-id="@producto.Id" class="btn btn-sm btn-danger p-2"><strong>Eliminar</strong></a>
                    </section>
                </li>
            }
        }else
        {
            <li class="list-group-item">No hay productos disponibles.</li>
        }
        
    </ul>
</section>