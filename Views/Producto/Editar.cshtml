
@using Models;
@model Producto
<section class="contariner">
    <h2>Editar Producto</h2>
    <form asp-action="Editar" method="post">
        <div>
            <label asp-for="Descripcion" class="form-label"></label>
            <input asp-for="Descripcion" type="text" class="form-control" value="@Model.Descripcion"/>
        </div>
        <div>
            <label asp-for="Precio" class="form-label"></label>
            <input asp-for="Precio" class="form-control" value="@Model.Precio">
        </div>
        <div>
            <input type="submit" value="Actualizar Datos" asp-route-id="@Model.Id" class="btn btn-primary">
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</section>